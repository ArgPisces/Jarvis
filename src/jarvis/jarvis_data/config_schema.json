{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Jarvis Environment Variables Schema",
  "description": "Schema for Jarvis system configuration",
  "type": "object",
  "properties": {
    "JARVIS_MCP": {
      "type": "array",
      "description": "MCP工具配置列表",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "required": [
              "type",
              "base_url"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "sse",
                  "streamable"
                ],
                "description": "MCP客户端类型"
              },
              "base_url": {
                "type": "string",
                "format": "uri",
                "description": "MCP服务器基础URL"
              },
              "auth_token": {
                "type": "string",
                "description": "认证令牌(可选)"
              },
              "headers": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "额外的HTTP头(可选)"
              },
              "name": {
                "type": "string",
                "description": "工具名称(可选)"
              },
              "enable": {
                "type": "boolean",
                "default": true,
                "description": "是否启用该工具(可选)"
              }
            }
          },
          {
            "type": "object",
            "required": [
              "type",
              "command"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "stdio"
                ],
                "description": "MCP客户端类型"
              },
              "command": {
                "type": "string",
                "description": "要执行的命令"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "命令参数列表(可选)"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "环境变量(可选)"
              },
              "name": {
                "type": "string",
                "description": "工具名称(可选)"
              },
              "enable": {
                "type": "boolean",
                "default": true,
                "description": "是否启用该工具(可选)"
              }
            }
          }
        ]
      }
    },
    "ENV": {
      "type": "object",
      "description": "Additional environment variables to set",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "JARVIS_GIT_COMMIT_PROMPT": {
      "type": "string",
      "description": "Git commit message generation prompt template",
      "default": ""
    },
    "JARVIS_MAX_TOKEN_COUNT": {
      "type": "string",
      "description": "Maximum token count the model can handle",
      "default": "960000"
    },
    "JARVIS_MAX_INPUT_TOKEN_COUNT": {
      "type": "string",
      "description": "Maximum input token count the model can handle",
      "default": "32000"
    },
    "JARVIS_AUTO_COMPLETE": {
      "type": "string",
      "description": "Whether to enable auto-completion feature",
      "default": "false",
      "enum": [
        "true",
        "false"
      ]
    },
    "SHELL": {
      "type": "string",
      "description": "System shell name (e.g. bash, zsh)",
      "default": "/bin/bash"
    },
    "JARVIS_PLATFORM": {
      "type": "string",
      "description": "Normal operation platform name",
      "default": "yuanbao"
    },
    "JARVIS_MODEL": {
      "type": "string",
      "description": "Normal operation model name",
      "default": "deep_seek_v3"
    },
    "JARVIS_THINKING_PLATFORM": {
      "type": "string",
      "description": "Thinking operation platform name",
      "default": "yuanbao"
    },
    "JARVIS_THINKING_MODEL": {
      "type": "string",
      "description": "Thinking operation model name",
      "default": "deep_seek"
    },
    "JARVIS_EXECUTE_TOOL_CONFIRM": {
      "type": "string",
      "description": "Whether to require confirmation before executing tools",
      "default": "false",
      "enum": [
        "true",
        "false"
      ]
    },
    "JARVIS_CONFIRM_BEFORE_APPLY_PATCH": {
      "type": "string",
      "description": "Whether to require confirmation before applying patches",
      "default": "true",
      "enum": [
        "true",
        "false"
      ]
    },
    "JARVIS_MAX_TOOL_CALL_COUNT": {
      "type": "string",
      "description": "Maximum consecutive tool call count",
      "default": "20"
    },
    "JARVIS_DATA_PATH": {
      "type": "string",
      "description": "Path to Jarvis data storage directory",
      "default": "~/.jarvis"
    },
    "JARVIS_AUTO_UPDATE": {
      "type": "string",
      "description": "Whether to auto-update git repositories",
      "default": "true",
      "enum": [
        "true",
        "false"
      ]
    },
    "JARVIS_MAX_BIG_CONTENT_SIZE": {
      "type": "string",
      "description": "Maximum big content size",
      "default": "1024000"
    },
    "JARVIS_PRETTY_OUTPUT": {
      "type": "string",
      "description": "Whether to enable PrettyOutput",
      "default": "false",
      "enum": [
        "true",
        "false"
      ]
    },
    "JARVIS_USE_METHODOLOGY": {
      "type": "string",
      "description": "Whether to enable methodology",
      "default": "false",
      "enum": [
        "true",
        "false"
      ]
    },
    "JARVIS_USE_ANALYSIS": {
      "type": "string",
      "description": "Whether to enable task analysis",
      "default": "false",
      "enum": [
        "true",
        "false"
      ]
    },
    "JARVIS_PRINT_PROMPT": {
      "type": "string",
      "description": "Whether to print prompts",
      "default": "false",
      "enum": [
        "true",
        "false"
      ]
    }
  },
  "additionalProperties": false
}