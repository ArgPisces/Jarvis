{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Jarvis Environment Variables Schema",
  "description": "Schema for Jarvis system environment variables configuration",
  "type": "object",
  "properties": {
    "ENV": {
      "type": "object",
      "description": "Additional environment variables to set",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "JARVIS_GIT_COMMIT_PROMPT": {
      "type": "string",
      "description": "Git commit message generation prompt template",
      "default": ""
    },
    "JARVIS_MAX_TOKEN_COUNT": {
      "type": "string",
      "description": "Maximum token count the model can handle",
      "default": "960000"
    },
    "JARVIS_MAX_INPUT_TOKEN_COUNT": {
      "type": "string",
      "description": "Maximum input token count the model can handle",
      "default": "32000"
    },
    "JARVIS_AUTO_COMPLETE": {
      "type": "string",
      "description": "Whether to enable auto-completion feature",
      "default": "false",
      "enum": ["true", "false"]
    },
    "SHELL": {
      "type": "string",
      "description": "System shell name (e.g. bash, zsh)",
      "default": "/bin/bash"
    },
    "JARVIS_PLATFORM": {
      "type": "string",
      "description": "Normal operation platform name",
      "default": "yuanbao"
    },
    "JARVIS_MODEL": {
      "type": "string",
      "description": "Normal operation model name",
      "default": "deep_seek_v3"
    },
    "JARVIS_THINKING_PLATFORM": {
      "type": "string",
      "description": "Thinking operation platform name",
      "default": "yuanbao"
    },
    "JARVIS_THINKING_MODEL": {
      "type": "string",
      "description": "Thinking operation model name",
      "default": "deep_seek"
    },
    "JARVIS_EXECUTE_TOOL_CONFIRM": {
      "type": "string",
      "description": "Whether to require confirmation before executing tools",
      "default": "false",
      "enum": ["true", "false"]
    },
    "JARVIS_CONFIRM_BEFORE_APPLY_PATCH": {
      "type": "string",
      "description": "Whether to require confirmation before applying patches",
      "default": "true",
      "enum": ["true", "false"]
    },
    "JARVIS_MAX_TOOL_CALL_COUNT": {
      "type": "string",
      "description": "Maximum consecutive tool call count",
      "default": "20"
    },
    "JARVIS_DATA_PATH": {
      "type": "string",
      "description": "Path to Jarvis data storage directory",
      "default": "~/.jarvis"
    },
    "JARVIS_AUTO_UPDATE": {
      "type": "string",
      "description": "Whether to auto-update git repositories",
      "default": "true",
      "enum": ["true", "false"]
    },
    "JARVIS_MAX_BIG_CONTENT_SIZE": {
      "type": "string",
      "description": "Maximum big content size",
      "default": "1024000"
    },
    "JARVIS_PRETTY_OUTPUT": {
      "type": "string",
      "description": "Whether to enable PrettyOutput",
      "default": "false",
      "enum": ["true", "false"]
    },
    "JARVIS_USE_METHODOLOGY": {
      "type": "string",
      "description": "Whether to enable methodology",
      "default": "false",
      "enum": ["true", "false"]
    },
    "JARVIS_USE_ANALYSIS": {
      "type": "string",
      "description": "Whether to enable task analysis",
      "default": "false",
      "enum": ["true", "false"]
    },
    "JARVIS_PRINT_PROMPT": {
      "type": "string",
      "description": "Whether to print prompts",
      "default": "false",
      "enum": ["true", "false"]
    },
    "KIMI_API_KEY": {
      "type": "string",
      "description": "API key for Kimi platform authentication",
      "default": ""
    },
    "OPENAI_API_KEY": {
      "type": "string",
      "description": "API key for OpenAI platform authentication",
      "default": ""
    },
    "OPENAI_API_BASE": {
      "type": "string",
      "description": "Base URL for OpenAI API, defaults to https://api.openai.com/v1",
      "default": "https://api.openai.com/v1"
    },
    "OPENAI_MODEL_NAME": {
      "type": "string",
      "description": "Default model name for OpenAI platform",
      "default": "gpt-4o"
    },
    "YUANBAO_COOKIES": {
      "type": "string",
      "description": "Authentication cookies for Yuanbao platform",
      "default": ""
    },
    "YUANBAO_AGENT_ID": {
      "type": "string",
      "description": "Agent ID for Yuanbao platform authentication",
      "default": ""
    }
  },
  "additionalProperties": false
}
